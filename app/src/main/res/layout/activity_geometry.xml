<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.example.widget.widget.GeometryImageView
        android:id="@+id/iv_left"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/geometry_left"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:adjustViewBounds="true"
        android:tag="left"
        app:layout_constraintWidth_percent="0.458"
        android:layout_height="wrap_content"/>

    <com.example.widget.widget.GeometryImageView
        android:tag="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".615"
        android:id="@+id/iv_center"
        android:src="@drawable/geometry_center"
        android:layout_width="0dp"
        android:adjustViewBounds="true"
        app:layout_constraintWidth_percent="0.381"
        android:layout_height="wrap_content"/>

    <com.example.widget.widget.GeometryImageView
        android:tag="right"
        android:id="@+id/iv_right"
        android:layout_width="0dp"
        android:adjustViewBounds="true"
        app:layout_constraintWidth_percent="0.293"
        android:layout_height="wrap_content"
        android:src="@drawable/geometry_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
/>

</androidx.constraintlayout.widget.ConstraintLayout>